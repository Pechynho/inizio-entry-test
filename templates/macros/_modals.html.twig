{% macro submit_modal(title, body, modal_id, size) %}
    {% set sizes = ["sm", "lg"] %}
    {% if size|default("")|lower in sizes %}
        {% set size = "modal" ~ size|lower %}
    {% else %}
        {% set size = "" %}
    {% endif %}
    <div class="modal fade submit-modal" id="{{ modal_id }}" tabindex="-1" role="dialog"
         aria-labelledby="{{ modal_id }}_title"
         aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered {{ size }}" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="{{ modal_id }}_title">{{ title }}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">{{ body|trim|raw }}</div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary min-width">Ano</button>
                    <button type="button" class="btn btn-secondary min-width" data-dismiss="modal">Ne
                    </button>
                </div>
            </div>
        </div>
    </div>
{% endmacro %}

{% macro delete_modal(title, body, modal_id, url, size) %}
    <div class="modal fade submit-modal" id="{{ modal_id }}" tabindex="-1" role="dialog"
         aria-labelledby="{{ modal_id }}_title"
         aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered {{ size }}" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="{{ modal_id }}_title">{{ title }}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">{{ body|trim|raw }}</div>
                <div class="modal-footer">
                    <form action="{{ url }}" method="post">
                        <input type="hidden" name="_method" value="delete">
                        <button type="submit" class="btn btn-primary min-width">Ano</button>
                    </form>
                    <button type="button" class="btn btn-secondary min-width" data-dismiss="modal">Ne
                    </button>
                </div>
            </div>
        </div>
    </div>
{% endmacro %}
